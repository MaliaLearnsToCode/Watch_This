<hr>
<h2 class="d-flex justify-content-center"><%= "This gorgeous #{@watch.model} will soon be at your doorsteps!" %></h2>
<hr>

<div>

  <div class="d-flex justify-content-center m-5">
    <p class="border rounded-pill bg-dark bg-opacity-25 p-3 m-1" style="text-color: grey;">Confirmation Details</p>
    <p class="border rounded-pill bg-success bg-opacity-25 p-3 m-1">Booking Confirmed!</p>
  </div>

  <div class="success-sequence">
    <div class="d-flex justify-content-center">
      <i class="fa-solid fa-circle-check fa-10x"></i>
    </div>
    <div class="d-flex justify-content-center mt-5"><h3>Congrats! Your Booking went through!</h3></div>
    <div class="d-flex justify-content-center mt-5"><p><%= " Booking reference: #{@booking.id}"  %></p></div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <div class="card-booking-success d-inline-flex justify-content-right">
    <div class="flex-fill" style="width: 80%;"> <%= image_tag("img_2.jpg", height: '280', width: '280') %></div>
      <div class="flex-fill" style="height: 80% weight: 24rem;">
        <h3><%= @watch.model %></h3>
        <p><%= @watch.brand %></p>
        <p><%= "Delivery to: #{@booking.delivery_location}" %></p>
        <p style="font-size: small"><%= "Booking date: #{@booking.start_date} - #{@booking.end_date}" %></p>
        <p><%= "Price/day: $ #{@watch.price}" %></p>
        <p><%= "Cleaning Service: #{@booking.cleaning_service ? @watch.cleaning_price.to_f : "No"}" %></p>
        <p><%= "Delivery: #{@booking.delivery ? @watch.delivery_price.to_f : "No"}" %></p>
        <hr>
        <p><%= "Total: $ #{@booking.total}" %></p>
        </div>
      </div>
    </div>
  </div>
  </div>

</div>
