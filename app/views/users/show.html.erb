<div class="grid-container">
  <nav role="tablist" class="grid-x align-justify align-middle">
    <hr>
      <div class="container-fluid">
        <a class="navbar-brand" href="/">WATCH THIS</a>
        <%= link_to 'Back to Watches', watches_path, class: "btn btn-outline-secondary my-2 my-sm-0 ms-2" %>
        <div class="collapse navbar-collapse">
          <div class="ms-auto flex">
          </div>
        </div>
      </div>
    <hr>
  </nav>
</div>

<div class="d-flex row justify-content-between">
  <h1>My Watches</h1>
  <div class="container">
    <div class="row">
      <% @watches.each do |watch| %>
        <%= render watch %>
        <div class="show-delete">

                  <%= link_to "Delete",
                              user_path(@user),
                              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
