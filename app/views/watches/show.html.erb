<div class="container">
  <div class="signature">
      <hr>
      <h2> Is this <strong><%= @watch.model %></strong> the watch you've been dreaming of? </h2>
      <hr>
  </div>



  <div class="container-image mb-5">
    <div id="single-watch-photo" class="row">
      <% @watch.photos.each do |photo| %>
      <div class = 'd-flex col-4 justify-content-center'>
        <%= cl_image_tag photo.key, height: 280, width: 280 %>
      </div>
      <% end %>
      </div>
  </div>




  <div class="d-flex justify-content-between mt-5">
    <div class="card-info border-0 mr-5 ml-0" style="width: 24rem; height: 16rem;">
      <div class="card-body">
        <h3 class="card-title" style="color:#9CA89C"><%= @watch.model %></h3>
        <h6 class="card-subtitle mb-2"><strong>Brand: </strong><%= @watch.brand %></h6>
        <p class="card-text"><strong>Model: </strong><%= @watch.model  %></p>
        <p class="card-text"><strong>Year: </strong><%= @watch.year  %></p>
        <p class="card-text"><strong>Price per day: </strong><%= @watch.price %></p>
      </div>
    </div>

    <div class="card-reserve" style="width: 18rem; height: 24rem; margin: 0 0 0 0;">
      <div class="card-body" style="background-color:#9CA89C;">
        <p class="card-text">
        <%= "Reserved dates: #{@start_date}  -  #{@end_date}" %></p>
        <p class="card-text"><%= "#{@days.to_i} Day(s)" %></p>
        <h5 class="card-title"><%= "Total: $ #{@watch.price * @days.to_i}" %></h5>
        <div class="card-body" style="margin:0 0 0 0;">
          <div class="btn btn-outline-success bg-opacity-35 my-2 my-sm-0"><%= link_to "RESERVE THIS WATCH", new_watch_booking_path(@watch, days: @days.to_i, start_date: @start_date, end_date: @end_date)%></div>
        </div>
      </div>
    </div>
  </div>

</div>
