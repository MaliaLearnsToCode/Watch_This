<div class="grid-container">
  <nav role="tablist" class="grid-x align-justify align-middle">
    <hr>
      <div class="container-fluid">
        <a class="navbar-brand" href="/">WATCH THIS</a>
        <%= link_to 'Back to Watches', watches_path, class: "btn btn-outline-secondary my-2 my-sm-0 ms-2" %>
        <div class="collapse navbar-collapse">
          <div class="ms-auto flex">
          </div>
        </div>
      </div>
    <hr>
  </nav>
</div>



<div class="container">
  <div id="single-watch-photo" class="row">
    <div style="width: 300px; height: 300px;" <%= "background-image: url('img_2.jpg')" %><%= "background-image: url('img_1.jpg')" %> >
      <div class="d-flex justify-content-center"></div>
    <div>
  </div>
</div>


<div class="d-flex justify-content-center">
  <div class="container w-100">
      <div class="card-details">
        <h2> <%= @watch.model  %> </h2>
        <p><strong>Brand: </strong><%= @watch.brand %></p>
        <p><strong>Model: </strong><%= @watch.model  %></li></p>
        <p><strong>Year: </strong><%= @watch.year  %></li></p>
        <p><strong>Price per day: </strong><%= @watch.price %></li></p>
      </div>
    </div>

  <div class="card-reserve">
    <% @bookings.each do |booking| %>

      <%= "Total: #{booking.watch.price}" %>
      <% days = booking.start_date - booking.end_date %>
      <%= "#{days} Days" %>
      <%= booking.start_date %>
       <%=booking.end_date %>
    <% end %>

    <button link_to new_watch_booking_path(@watch), class="btn btn-outline-secondary my-2 my-sm-0" type="submit">RESERVE</button>
  </div>
</div>
